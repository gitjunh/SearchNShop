<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:background="@color/colorPrimaryDark"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:textColor="@color/colorWhite"
              android:text=""
              android:textSize="30sp"
              android:textAlignment="center" android:textStyle="bold"
              android:layout_alignParentTop="true" android:layout_alignParentEnd="true"
              android:layout_marginTop="50dp"/>

    <ImageView
            android:id="@+id/imgNaver"
            android:layout_width="match_parent" android:layout_height="40dp"
            android:contentDescription="@string/naver_open_api_bi"
            app:srcCompat="@drawable/naver_bi_black" android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_centerVertical="true"/>
    <TextView
            android:text="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp" android:id="@+id/textView"
            android:layout_above="@+id/imgNaver" android:layout_centerHorizontal="true"
            android:textSize="30sp" android:textAllCaps="false"
            android:textColor="@color/textPrimary"/>
</RelativeLayout>